<Window x:Class=\"SaikyoVpn.Gui.MainWindow\"
        xmlns=\"http://schemas.microsoft.com/winfx/2006/xaml/presentation\"
        xmlns:x=\"http://schemas.microsoft.com/winfx/2006/xaml\"
        Title=\"SaikyoVpn - Saikyo\" Height=\"420\" Width=\"720\">
    <Grid Margin=\"10\">
        <Grid.RowDefinitions>
            <RowDefinition Height=\"Auto\" />
            <RowDefinition Height=\"Auto\" />
            <RowDefinition Height=\"*\" />
            <RowDefinition Height=\"Auto\" />
        </Grid.RowDefinitions>

        <StackPanel Orientation=\"Horizontal\" Grid.Row=\"0\" Margin=\"0,0,0,8\">
            <Button x:Name=\"BtnGenerate\" Width=\"120\" Height=\"30\" Click=\"BtnGenerate_Click\">Generate Keys</Button>
            <Button x:Name=\"BtnSave\" Width=\"120\" Height=\"30\" Margin=\"8,0,0,0\" Click=\"BtnSave_Click\">Save Config</Button>
        </StackPanel>

        <StackPanel Grid.Row=\"1\" Orientation=\"Horizontal\" Margin=\"0,0,0,8\">
            <StackPanel>
                <TextBlock>Private Key</TextBlock>
                <TextBox x:Name=\"TxtPrivateKey\" Width=\"330\" />
            </StackPanel>
            <StackPanel Margin=\"8,0,0,0\">
                <TextBlock>Public Key</TextBlock>
                <TextBox x:Name=\"TxtPublicKey\" Width=\"330\" />
            </StackPanel>
        </StackPanel>

        <TextBox x:Name=\"TxtConfig\" Grid.Row=\"2\" AcceptsReturn=\"True\" VerticalScrollBarVisibility=\"Auto\" FontFamily=\"Consolas\" />

        <TextBlock Grid.Row=\"3\" HorizontalAlignment=\"Left\" Foreground=\"Gray\">Note: This app generates WireGuard config text. It does not install or enable a tunnel by itself.</TextBlock>
    </Grid>
</Window>
